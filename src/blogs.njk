---
pagination:
  data: collections.blogs
  size: 6
  alias: list
  reverse: true
permalink: "blogs/{% if pagination.pageNumber > 0 %}pagina-{{ pagination.pageNumber + 1 }}/{% endif %}index.html"
---

{% extends "src/base.njk" %}

{% block head %}
    <title>Candidatos | Blogs</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
{% endblock %}

{% block content %}

        <section id="slider" class="slider-element bg-color" style="background-image:url('/elementos/SLIDER/WEB_CANDIDATOS_2023-28.png');background-size:cover">
            <div class="container">
                <div class="row h-100 justify-content-center">
                    <div class="col-lg-8 d-flex align-self-center flex-column pt-5 pb-0 py-lg-6 mb-0 my-lg-4 text-center justify-content-center">
                        
                        <h1 class=" text-white" style="font-weight: 800">Blogs</h1>
                        <div>
                        </div>
                    </div>

                </div>
            </div>
        </section>

        <!-- Content
		============================================= -->
		<section id="content">
			<div class="content-wrap">

                <!-- event-area-start -->
                <div class="event-area pt-20 pb-130">
                    <div class="container">

                        <div class="row d-flex justify-content-center">
                            <div class="col-lg-12">
                                <div class="row">
                                {% if list%}
                                {% for item in list%}

                                <div class="col-md-4 col-lg-4 col-sm-12 my-4">
                                    <div class="cuadro_blog ">
                                        <a href="{{item.url}}"><img src="{{ item.data.image }}" alt="Evento" class="w-36"></a>
                                        <div class="px-4 py-4 text-left">
                                            <i class="fa-regular fa-calendar"></i><span class="text-sm">
                                            {{item.data.date | dateFormat('DD/MM/YYYY')}}
                                            </span><br>
                                            <br>
                                            <h5 class="font-bold text-lg">
                                            {{item.data.title }}
                                            </h5>
                                            
                                            <span class="text-sm">
                                            {{item.data.description}}
                                            </span>
                                            
                                        </div>
                                        <a href="{{item.url}}"><div class="px-4 pb-2 pt-2 text-left" style="border-top:#ccc 1px solid">
                                            <span>Ver más <i class="fa-solid fa-caret-right"></i></span>
                                        </div></a>

                                    </div>
                                </div>
                                {% endfor %}
                                {% endif %}
                               
                                </div>

                                <div class="d-flex justify-content-center">
                                    {% if pagination.href.previous %}
                                    <div class="mx-4">
                                        {% if pagination.href.previous %}<a href="{{ pagination.href.previous }}">← Iniciativas más recientes</a>{% else %}←  Nuevos blog{% endif %}
                                    </div>
                                    {% endif %}
                                    {% if pagination.href.next %}
                                    <div class="mx-4">
                                        {% if pagination.href.next %}<a href="{{ pagination.href.next }}">Iniciativas anteriores →</a>{% else %}Blog anteriores →{% endif %}
                                    </div>
                                    {% endif %}
                                </div>
                            </div>
                        </div>

                    </div>

                </div>
            </div>
        </section>

{% endblock %}